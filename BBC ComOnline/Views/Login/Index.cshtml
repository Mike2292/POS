@model Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bienvenido!</h1>
                                    </div>
                                    <div class="abs-center">
                                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "border p-3 form user" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary("", new { @class = "alert alert-danger", @role = "alert" })

                                            <div class="login">
                                                <div class="form-group">
                                                    @Html.LabelFor(a => a.Correo)
                                                    @Html.TextBoxFor(a => a.Correo, new { @class = "form-control form-control-user", @placeholder = "yo@ejemplo.com" })
                                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(a => a.Clave)
                                                    @Html.PasswordFor(a => a.Clave, new { @class = "form-control form-control-user", @placeholder = "**********" })
                                                </div>
                                                <!--<input type="submit" value="Login" />-->
                                                <Center><button type="submit" class="btn btn-primary">Entrar</button></Center>
                                            </div>
                                        }
                                        <div class="text-center">
                                            <a class="small" href="~/Login/Olvide">Olvidé mi contraseña?</a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" href="~/Login/Registro">Registrarse!</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
