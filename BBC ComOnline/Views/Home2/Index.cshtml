@model IEnumerable<BBC_ComOnline.Models.Articulo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Precio
            </th>
            <th>
                Borrar
            </th>
            <th>
                Modificar
            </th>
        </tr>

        @foreach (var articulos in Model)
        {
            <tr>
                <td>
                    @articulos.Codigo
                </td>
                <td>
                    @articulos.Descripcion
                </td>
                <td>
                    @articulos.Precio
                </td>
                <td>
                    <a href="/Home/Baja?cod=@articulos.Codigo">borra?</a>
                </td>
                <td>
                    <a href="/Home/Modificacion?cod=@articulos.Codigo">modifica?</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Home/Crear">Agregar</a>
</body>
</html>
